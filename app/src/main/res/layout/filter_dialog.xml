<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <RadioGroup
        android:id="@+id/filterRadioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/anyTimeRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any Time"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/todayRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/thisMonthRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Month"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/thisYearRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Year"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/applyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_parple_bg"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:text="Apply"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

</LinearLayout>
